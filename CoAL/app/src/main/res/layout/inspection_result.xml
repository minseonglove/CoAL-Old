<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/list_background"
    tools:context=".WatchListFragment">
    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity=""
            android:layout_marginStart="72dp"
            android:layout_weight="4"
            android:gravity="center"
            android:text="검색 결과"
            android:textColor="#280543"
            android:textSize="19sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/go_back_btn"
            android:layout_width="64dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:layout_gravity="center"
            android:contentDescription="조건검색 버튼"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/right_icon_box" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/search_detail"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="검색 조건"
            android:textColor="#280543"
            android:textSize="14sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/search_number"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="개수"
            android:textColor="#4E4E4E"
            android:textSize="10sp"
            android:textStyle="bold" />
    </LinearLayout>
    <ListView
        android:id="@+id/listView2"
        android:divider="#80FFFFFF"
        android:dividerHeight="1.5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>