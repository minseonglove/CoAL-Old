<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners
                android:radius="20dp"/>

            <size
                android:width="@dimen/switch_track_width"
                android:height="@dimen/switch_track_height"/>

            <gradient
                android:angle="45"
                android:startColor="#7300AB30"
                android:endColor="#7300DE3E"
                android:type="linear"/>
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="20dp"/>
            <gradient
                android:angle="0"
                android:startColor="#7300D108"
                android:endColor="#7398FF9C"
                android:type="linear"/>
        </shape>
    </item>
</layer-list>